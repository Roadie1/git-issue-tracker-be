    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug dev",
            "sourceMaps": true,
            "smartStep": true,
            "program": "${workspaceFolder}/src/index.ts",
            "outFiles": ["${workspaceFolder}/build/*.js"],
            "runtimeExecutable": "npm",
            "preLaunchTask": "npm run build",
            "skipFiles": [
                "<node_internals>/**"
            ],
        }
    ]
}